{
  "manifest_version": 3,
  "name": "Lightbeam",
  "version": "3.0.0",
  "description": "Visualize third-party tracking on the web",
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "permissions": ["webRequest", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lightbeam"
  }
}
